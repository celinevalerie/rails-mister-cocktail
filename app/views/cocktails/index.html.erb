<div class="banner">
  <h3>DASHBOARD</h3>
  <%=image_tag("drink.png" , style: 'height: 50px; width: 50px; margin: 20px;') %>
</div>

<% @cocktails.each do |cocktail| %>
  <div class="card">
    <div class="cocktail_card">
        <%= cl_image_tag cocktail.photo.key, height: 100, width: 100, crop: :fill %>
        <div class="cocktail_card_text">
          <h5><%= link_to cocktail.name, cocktail, style: "color: #2B2D42;" %></h5>
          <p>Some quick example text to build on the card title.</p>
          <i class="fas fa-star" style="color: #5ACCB3; "></i><i class="fas fa-star" style="color: #5ACCB3; "></i><i class="fas fa-star" style="color: #5ACCB3; "></i><i class="fas fa-star" style="color: #5ACCB3; "></i><i class="fas fa-star" style="color: #5ACCB3; "></i>
      </div>
    </div>
  </div>
<% end %>

<p></p>

<div class="button">
  <%= link_to "Add cocktail", new_cocktail_path, style: "color: white; text-decoration: none;"%>
</div>


